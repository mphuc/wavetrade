   <body >
      <div ng-app="myApp">
        <div  ng-controller="CtrChartPie">  
          <input type="hidden" id="_EXCHANGE_" value="{{MarketName}}" name="">
          <div id="piechart_3d" style="width: 140px; height: 150px; margin-top: -40px"></div>

          <div class=" hidden-xs hidden-sm" style="margin-top: 15px;">
           
