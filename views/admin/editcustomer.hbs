<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <form method="post" action="/qwertyuiop/admin/updateUser" class="form-horizontal">
                  <div class="header card-header-text text-center">
                     <h4 class="title">Update User: <code> {{users.displayName}}</code></h4>
                  </div>
                  <div class="content">
                     <fieldset>
                        <div class="form-group text-center">
                           <p>Sponser: {{user_node}}</p>
                        </div>
                     </fieldset>
                     <fieldset>
                        <div class="form-group">
                           <label class="col-sm-2 control-label">Password</label>
                           <input type="hidden" value="{{users._id}}" name="uid" class="form-control">
                           <div class="col-sm-10"> <input type="password" name="password" class="form-control"> </div>
                        </div>
                     </fieldset>
       
                     <fieldset>
                        <div class="text-center"> <button type="submit" class="btn btn-rose btn-fill btn-wd">Update</button> </div>
                     </fieldset>
                  </div>
               </form>
            </div>
         </div>
      </div>

      <div class="row">
         <div class="col-md-12">
            <div class="card">
            {{#if_eq users.personal_info.status_doc '0'}}
              <h3 class="text-center">Not Verified</h3>
            {{/if_eq}}   
            {{#if_eq users.personal_info.status_doc '1'}}
               <div class="col-md-6">
                  <img src="/{{users.personal_info.document1}}" />
               </div>
               <div class="col-md-6">
                  <img src="/{{users.personal_info.document1}}" />
               </div>
            {{/if_eq}} 
            {{#if_eq users.personal_info.status_doc '2'}}
               <div class="col-md-6">
                  <img src="/{{users.personal_info.document1}}" />
               </div>
               <div class="col-md-6">
                  <img src="/{{users.personal_info.document1}}" />
               </div>
            {{/if_eq}} 
            <div class="clearfix"></div>
            {{#if_eq users.personal_info.status_doc '1' }}
            <div class="text-center">
               <a href="/qwertyuiop/admin/customer/verified/{{users._id}}">
                  <button type="button" class="btn btn-success">Verified Account</button>
               </a>
            </div>
            {{/if_eq}} 
            </div>
         </div>
      </div>

      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content" id="">
                  
               </div>
            </div>
         </div>
      </div>

      <div class="row">
        <table id="datatables_customer" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
            <thead>
               <tr>
                  <th>Date</th>
                  <th>Account ID</th>
                  <th>Balance</th>
                  
                  
               </tr>
            </thead>
            <tbody>
               {{#each results}} 
               <tr>
                  <td>{{formatDate this.signupDate "MM/DD/YYYY LT"}} </td>
                
                  <td><a href="/qwertyuiop/admin/history-buysell/{{this.account_id}}">{{this.account_id}}</a></td>
                  
                  <td>{{formatusd this.balance}}</td>
                  
                  
               </tr>
               {{/each}} 
            </tbody>
         </table>
      </div>
      

      
   </div>
</div>