<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content">
                  <p class="pull-right">Total BTC: {{satoshi total_btc}} BTC. <span style="color: blue">Total ETH: {{satoshi total_eth}} ETH.</span> Total XRP: {{satoshi total_xrp}} XRP.<span style="color: blue"> Total USD: {{formatusd total_usd}} USD</span></p>
               
                  <div class="clearfix"></div> 
                  <div class="table-responsive">
                  <div class="material-datatables" style="width: 100%; overflow-x: scroll;">
                     <table id="datatables_deposit" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                        <thead>
                           <tr>
                              <th>Username</th>
                              <th>Date</th>
                              <th>Amount </th>
                              <th>Amount USD</th>
                              
                              <th>Wallet</th>
                              <th>Status</th>
                              <th>Txid</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{#each history}} 
                           <tr>
                              <td>{{this.username}}</td>
                              <td>{{formatDate this.date "MM/DD/YYYY LT"}} </td>
                              <td >{{satoshi this.amount}} {{ this.type}}</td>
                              <td >{{formatusd this.amount_usd}}</td>
                              
                              <td>{{this.wallet}}</td>
                              <td>
                                 {{#if_eq this.status '1'}}
                                    <span class="label label-success">Success</span>
                                 {{/if_eq}}

                                 {{#if_eq this.status '0'}}
                                    <span class="label label-warning">{{this.confirm}} Confirm</span>
                                 {{/if_eq}} 
                              <td>{{this.txid}}</td>
                           </tr>
                           {{/each}} 
                        </tbody>
                     </table>
                  </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>