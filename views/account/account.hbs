         <div class="modal-body" style="min-height: 70px;">
             <div class="form-group" >
                <input type="hidden" name="type" value="1">
                
             </div>
             <div class="clearfix" style="margin-top: 20px"></div>
             <div class="form-group" >
                <h5 class="col-sm-offset-1 col-sm-3">
                   Balance:
                </h5>
                <div class="col-sm-7">
                  <input class="form-control text-right" name="balance" type="balance"  >
                </div>
             </div>
             <div class="clearfix"></div>
             <div class="alert alert-danger alert-dismissable error_submit_add_account" style="display: none;"></div>
         </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
           <button type="submit" class="btn btn-primary has-spinner btn-submit-exchain"  style="">
             <span class="spinner"><i style="display: none;" class="fa fa-spinner fa-pulse"></i></span>
             <confirm>Confirm</confirm>
          </button>
         </div>
       </form>

    </div>
    
  </div>
</div>

